<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/play_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/play_image_view"
        app:srcCompat="@drawable/ic_play"/>

    <TextView
        android:id="@+id/artist_text_view"
        android:layout_toRightOf="@+id/play_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/news_text"
        android:maxLines="1"
        tools:text="@tools:sample/lorem"
        android:layout_toEndOf="@+id/play_image_view"/>

    <TextView
        android:id="@+id/title_text_view"
        android:layout_toRightOf="@+id/play_image_view"
        android:layout_below="@+id/artist_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/news_text"
        android:textColor="@color/colorGrey"
        android:maxLines="2"
        tools:text="@tools:sample/lorem"
        android:layout_toEndOf="@+id/play_image_view"/>

</RelativeLayout>