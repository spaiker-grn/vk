<resources>


    <style name="VkTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="profile_items">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>

    </style>

    <style name="news_text">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_small_grey">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="text_small_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="app_bar_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="text_small_white">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


</resources>
